@using CPopeWebsite.Data.Blog

<div class="post-preview">
    <NavLink href="@($"blog/blogpost/{blogPost.Id}")">
        <h2 class="post-title">
            @blogPost.Title
        </h2>
        @((MarkupString)blogPost.PostSummary)
    </NavLink>
    <p class="post-meta">
        Posted by
        <NavLink href="/">@blogPost.Author</NavLink>
        on @blogPost.Posted.ToString("dd/MM/yyyy HH:mm")
    </p>
</div>

@code {
    [Parameter] public BlogPost blogPost { get; set; }
}
